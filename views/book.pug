extends layout.pug

block content

    h1 Update Book
    form(action="", method="post")
        p
            label(for="title") Title
            input(type="text", name="title", id="title", value="A Brief History of Time")
        p
            label(for="author") Author
            input(type="text", name="author", id="author", value="Stephen Hawking")
        p
            label(for="genre") Genre
            input(type="text", name="genre", id="genre", value="Non-fiction")
        p
            label(for="year") Year
            input(type="text", name="year", id="year", value="1988")
        p
            input(type="submit", value="Update Book")
    form(action="", method="post")
        p
            a(href="/", class="button") Cancel
        p
            input(type="submit", value="Delete Book")